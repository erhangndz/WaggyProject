@model Product
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<form method="post" enctype="multipart/form-data">
    
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
     <label>Ürün Görseli</label>
    <input type="file" asp-for="ImageFile" class="form-control" required />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Puanı</label>
    <input type="number" asp-for="Review" class="form-control" />
    <br />
    <label>Kategori</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control" >
        <option>Kategori Seçiniz</option>
    </select>
    <br />
    <button class="btn btn-primary">Kaydet</button>


</form>