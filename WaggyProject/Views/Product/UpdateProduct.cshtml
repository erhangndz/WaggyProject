@model Product
@{
    ViewData["Title"] = "Ürün Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Görseli</label>
    <img src="@Model.ImageUrl" style="width:100px;height:100px" alt="Ürün Görseli" />
    <input type="file" asp-for="ImageFile" class="form-control" />
    <input type="hidden" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Puanı</label>
    <input type="number" asp-for="Review" class="form-control" />
    <br />
    <label>Kategori</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
        <option>Kategori Seçiniz</option>
    </select>
    <br />
    <button class="btn btn-primary">Güncelle</button>


</form>

