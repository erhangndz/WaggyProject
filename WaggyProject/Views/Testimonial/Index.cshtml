@model List<Testimonial>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@{
    int count = 0;
}

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Yorum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Comment</td>
            <td>
                <a onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-danger"><i class="fa fa-trash"></i>  Sil</a>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info"><i class="fa fa-pen"></i>  Güncelle</a>
            </td>
        </tr>
    }


</table>
<a href="/Testimonial/CreateTestimonial" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Yeni Referans</a>



<script>
    function deleteTestimonial(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href= "/Testimonial/RemoveTestimonial/"+ id;

      }
    });


    }

</script>

