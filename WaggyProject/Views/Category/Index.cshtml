@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout="~/Views/AdminLayout/Index.cshtml"; 
}


@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;  


    <tr>
        <th>@count</th>
        <td>@item.CategoryName</td>
        <td>
            <a onclick="deleteCategory(@item.CategoryId)" class="btn btn-danger"><i class="fa fa-trash"></i>  Sil</a>
            <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info"><i class="fa fa-pen"></i>  Güncelle</a>
        </td>
    </tr>
    }

  
</table>
<a href="/Category/AddCategory" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Yeni Kategori</a>



<script>
    function deleteCategory(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {

          window.location.href= "/Category/DeleteCategory/"+ id;

      }
    });


    }

</script>