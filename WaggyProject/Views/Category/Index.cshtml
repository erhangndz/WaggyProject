@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>
@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;  


    <tr>
        <th>@count</th>
        <td>@item.CategoryName</td>
        <td>
            <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
            <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
        </td>
    </tr>
    }
</table>

<br />

<a href="/Category/AddCategory" class="btn btn-dark">Yeni Kategori</a>
